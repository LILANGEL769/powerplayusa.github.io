<!DOCTYPE html>
<html>
<head>
    <title>Political Party Home Page</title>
</head>
<body>
    <h1>Political Party Home Page</h1>
    <div id="party-info"></div>
    <script>
        // Fetch party information from the backend and display it on the page
        fetch("/parties")
        .then(response => response.json())
        .then(data => {
            const partyInfoDiv = document.getElementById("party-info");
            data.forEach(party => {
                const partyDiv = document.createElement("div");
                partyDiv.innerHTML = `
                    <h2>${party.name}</h2>
                    <p>Chair: ${party.chair}</p>
                    <p>Vice Chair: ${party.viceChair}</p>
                    <p>Treasurer: ${party.treasurer}</p>
                    <p>Member Count: ${party.memberCount}</p>
                `;
                partyInfoDiv.appendChild(partyDiv);
            });
        });
    </script>
</body>
</html>
from flask import Flask, jsonify

app = Flask(__name__)

# Sample data for political parties (replace this with your own data)
parties = [
    {
        "name": "Party A",
        "chair": "John Smith",
        "viceChair": "Jane Doe",
        "treasurer": "Michael Johnson",
        "memberCount": 1000
    },
    {
        "name": "Party B",
        "chair": "Alice Brown",
        "viceChair": "Bob Green",
        "treasurer": "Carol White",
        "memberCount": 850
    }
]

@app.route("/parties", methods=["GET"])
def get_parties():
    return jsonify(parties)

if __name__ == "__main__":
    app.run(debug=True)
